    "@types/bun": "^1.1.14",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "drizzle-kit": "^0.31.8",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.2",
