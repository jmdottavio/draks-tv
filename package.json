{
  "name": "draks-tv",
  "version": "1.0.0",
  "description": "Lightweight Twitch dashboard with Streamlink/VLC integration",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite dev",
    "build": "vite build",
