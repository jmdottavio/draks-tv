# Twitch API Credentials (Required)
# Get these from https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# Server Configuration
PORT=9442

# Security Configuration (Recommended for Production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# If not set, an auto-generated key will be used (stored in data/.encryption-key)
# TOKEN_ENCRYPTION_KEY=your_64_character_hex_key_here
